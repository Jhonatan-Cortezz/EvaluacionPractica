<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jac.evaluacionpractica">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_miicono"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_miicono_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".About">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".SplashScreen"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MyRecyclerView">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity android:name=".Login"></activity>
        <activity android:name=".RegistraUsuario">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ListViewUsuario" />
        </activity>
        <activity android:name=".RegistrarProducto">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ListViewProductos" />
        </activity>
        <activity android:name=".RegistrarCategoria">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ListViewCategorias" />
        </activity>
        <activity android:name=".ListViewUsuario">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity android:name=".ListViewProductos">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity android:name=".ListViewCategorias">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity android:name=".DetalleUsuario">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ListViewUsuario" />
        </activity>
        <activity android:name=".DetalleProducto">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ListViewProductos" />
        </activity>
        <activity android:name=".DetalleCategoria">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ListViewCategorias" />
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>